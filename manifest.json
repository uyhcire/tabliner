{
  "manifest_version": 2,

  "name": "Tabliner",
  "description": "Manage your tabs",
  "version": "0.0.2",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Open"
  },
  "commands": {
    "open": {
      "suggested_key": {
        "default": "Ctrl+Period"
      },
      "description": "Open Tabliner"
    }
  },
  "permissions": ["tabs", "windows"],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["build/main.js"]
    }
  ]
}
